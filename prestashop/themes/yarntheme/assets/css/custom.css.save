a {
	transition: all 0.3s ease 0s;
    	text-decoration: none;
}





#header .header-nav {
	background: #f9f9f9 none repeat scroll 0 0;
	border-bottom: 1px solid #e9e9e9;
}

#header .menu {
	background: #ededed;
	margin-top: 40px;
}

#header .header-nav #_desktop_contact_link #contact-link {
    	color: #666;
}

#header a {
	color: #666;
}




@media only screen and (min-width: 768px) {
    #search_widget {
        float: left;
    }
}



.footer-container {
	background: #313131 none repeat scroll 0 0;
   	padding-bottom: 63px;
    	padding-top: 43px;
}

.block-contact .block-contact-title {
	color: #fff;
    	cursor: pointer;
    	font-size: 16px;
    	font-weight: 600;
    	line-height: 20px;
   	margin: 0 0 30px;
    	text-transform: uppercase;
}

.block-contact a {
	color: #fff;
}

#contact-infos {
	color: #fff;
   	font-size: 14px;
    	font-weight: 600;
    	line-height: 19px;
    	text-transform: uppercase;
    	padding-bottom: 8px;
}

.footer-container .h3 {
	color: #fff;
    	cursor: pointer;
    	font-size: 16px;
    	font-weight: 600;
    	line-height: 20px;
    	margin: 0 0 30px;
    	text-transform: uppercase;
}

.footer-container ul li a {
	display: block;
    	color: #fff;
    	font-size: 14px;
    	font-weight: 600;
    	line-height: 17px;
    	text-transform: uppercase;
}

.footer-container ul li {
	color: #fff;
    	font-size: 14px;
    	font-weight: 600;
    	line-height: 19px;
    	text-transform: uppercase;
    	padding-bottom: 8px;
}

.footer-container li a:hover, .block-contact a:hover {
        color: #ec4445;
        text-decoration: none;
}
